<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTextBackground"
    android:orientation="vertical"
    android:padding="@dimen/small_padding"
    tools:context=".presentation.persons.PersonsFragment">

    <ImageView
        android:id="@+id/personInfoImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/medium_margin" />

    <TextView
        android:id="@+id/personInfoFullNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_title_text_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/medium_margin"
        tools:text="Fullname" />

    <TextView
        android:id="@+id/personInfoProfessionTextView"
        android:layout_width="wrap_content"
        android:textSize="@dimen/title_text_size"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/small_margin"
        tools:text="Perofession" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_medium_margin">

        <TextView
            android:id="@+id/personInfoInfoTextView"
            android:layout_width="match_parent"
            android:textSize="@dimen/subtitle_text_size"
            android:layout_height="wrap_content"
            tools:text="Info" />

    </ScrollView>
</LinearLayout>